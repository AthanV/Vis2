{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Top 5 Most Visited Regions by State",
  "width": 800,
  "height": 600,
  "autosize": {"type": "fit", "contains": "padding"},
  "padding": {"left": 150, "right": 20, "top": 20, "bottom": 20},
  "config": {
    "axisY": {"labelPadding": 10}
  },
  "description": "Top 5 Most Visited Regions by Selected State",
  "data": {
    "url": "https://raw.githubusercontent.com/AthanV/Vis2/refs/heads/main/Assignment2/DataSets/TopRegions.csv",
    "format": {"type": "csv", "parse": {"Trips": "number"}}
  },
  "params": [
    {
      "name": "State_Selection",
      "bind": {
        "input": "select",
        "options": [
          "New South Wales",
          "Northern Territory",
          "Queensland",
          "South Australia",
          "Victoria",
          "Western Australia"
        ],
        "labels": [
          "New South Wales",
          "Northern Territory",
          "Queensland",
          "South Australia",
          "Victoria",
          "Western Australia"
        ],
        "name": "State: "
      },
      "value": "Victoria"
    }
  ],
  "transform": [
    {"filter": "datum.State == State_Selection"},
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "Trips", "order": "descending"}],
      "groupby": ["State"]
    },
    {"filter": "datum.rank <= 5"}
  ],
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "y": {
          "field": "Region",
          "type": "ordinal",
          "title": null,
          "sort": "-x"
        },
        "x": {
          "field": "Trips",
          "type": "quantitative",
          "title": "Number of Trips"
        },
        "tooltip": [
          {"field": "rank", "type": "quantitative", "title": "Rank"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 5
      },
      "encoding": {
        "y": {"field": "Region", "type": "ordinal", "sort": "-x"},
        "x": {"field": "Trips", "type": "quantitative"},
        "text": {"field": "Trips", "type": "quantitative", "format": ".0f"}
      }
    }
  ],
  "height": {"step": 30}
}
