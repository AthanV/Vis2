{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Top 5 Most Visited Regions by State",
  "width": 1500,
  "height": 600,
  "description": "Top 5 Most Visited Regions by Selected State",
  "data": {
    "url": "https://raw.githubusercontent.com/AthanV/Vis2/refs/heads/main/Assignment2/DataSets/TopRegions.csv"
  },
  "params": [
    {
      "name": "State_Selection",
      "bind": {
        "input": "select",
        "options": [
          "Australian Capital Territory",
          "New South Wales",
          "Northern Territory",
          "Queensland",
          "South Australia",
          "Victoria",
          "Western Australia"
        ],
        "labels": [
          "Australian Capital Territory",
          "New South Wales",
          "Northern Territory",
          "Queensland",
          "South Australia",
          "Victoria",
          "Western Australia"
        ],
        "name": "State Selection: "
      },
      "value": "Victoria"
    }
  ],
  "transform": [
    {
      "filter": "datum.State == State_Selection"
    },
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "Trips", "order": "descending"}],
      "groupby": ["State"]
    },
    {
      "filter": "datum.rank <= 5"
    }
  ],
  "mark": "bar",
  "encoding": {
    "y": {
      "field": "Region",
      "type": "ordinal",
      "sort": "-x"
    },
    "x": {
      "field": "Trips",
      "type": "quantitative",
      "title": "Number of Trips",
      "scale": {"domain": [0, 24000]},
      "axis": {"tickCount": 13, "values": [0, 2000, 4000, 6000, 8000, 10000, 12000, 14000, 16000, 18000, 20000, 22000, 24000]}
    },
    "color": {
      "field": "Region",
      "type": "nominal",
      "legend": null
    }
  },
  "height": {"step": 30}
}
