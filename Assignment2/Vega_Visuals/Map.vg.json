{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 300,
  "projection": {"type": "mercator"},
  "params": [
    {
      "name": "year_selection",
      "value": 2016,
      "bind": {
        "input": "select",
        "options": [2010, 2011, 2012, 2013, 2014, 2015, 2016],
        "labels": ["2010", "2011", "2012", "2013", "2014", "2015", "2016"],
        "name": "Select Year: "
      }
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/AthanV/Vis2/refs/heads/main/Assignment2/DataSets/Map.csv",
    "format": {"type": "csv", "parse": {"Year": "number"}}
  },
  "transform": [
    {
      "filter": "datum.Year == year_selection"
    },
    {
      "lookup": "State",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/AthanV/Vis2/refs/heads/main/Assignment2/DataSets/New_Australia.json",
          "format": {"type": "topojson", "feature": "STE_2016_AUST"}
        },
        "key": "properties.STE_NAME16"
      },
      "as": "geo"
    }
  ],
  "mark": {"type": "geoshape", "stroke": "black",
  "strokeWidth": 0.5},
  "encoding": {
    "shape": {"field": "geo", "type": "geojson"},
    "color": {
      "field": "Visitors per 1000 Residents",
      "type": "quantitative",
      "scale": {
        "type": "log",
        "domain": [5, 10, 20, 30],
        "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
      },
    
    "legend": {
    "orient": "bottom",
    "direction": "horizontal",
    "titleAnchor":"middle"

    }
    },
    "tooltip": [
      {"field": "State", "type": "nominal", "title": "State"},
      {"field": "Visitors per 1000 Residents", "type": "quantitative"},
      {"field": "Trips", "type": "quantitative", "title": "Actual Trips", "format": ".0f"}
      
    ]
  }
}
